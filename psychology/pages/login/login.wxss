/* pages/login/login.wxss */
.login_warp {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #FA4D46;
}

.welcome_text {
  position: absolute;
  top: 160rpx;
  left: 32rpx;
}

.welcome_text .h3_title {
  margin-bottom: 16rpx;
  color: #fff;
  font-weight: 600;
  font-size: 52rpx;
}

.welcome_text .p_text {
  color: #fff;
  font-weight: 200;
}

.login_form {
  position: absolute;
  top: 350rpx;
  left: 50%;
  transform: translateX(-50%);
  box-sizing: border-box;
  padding: 32rpx;
  width: 94%;
  /* min-height: 520rpx; */
  background-color: #fff;
  box-shadow: 0px 0px 29rpx 0px rgba(109, 109, 109, 0.35);
  border-radius: 20rpx;
}

.skip_class {
  display: flex;
  justify-content: flex-end;
  color: #999;
}