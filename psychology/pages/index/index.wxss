.content_warp {
  margin-top: 12rpx;
  padding: 16rpx 32rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.title_tip {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.linestyle {
  margin-right: 12rpx;
  display: inline-block;
  width: 6rpx;
  height: 40rpx;
  border-radius: 6rpx;
  background-color: #339DFF;
  color: #f04034;
}

.flex_recommend {
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  line-height: 64rpx;
  text-align: center;
}

.recommend_left,
.recommend_right {
  width: 49%;
  height: 400rpx;
  border-radius: 12rpx;
}

.lumpcolor {
  height: 49%;
  border-radius: 12rpx;
}

.padding_style {
  padding: 10rpx;
  box-sizing: border-box;
}

.shop-view {
  margin: 16rpx 0;
  box-sizing: border-box;
  /* background-color: #fff; */
}

